<main>
    <form class="search" action="/house/search" method="POST">
        <input type="search" name="search" placeholder="Search here...">
        <button type="submit">Search</button>
    </form>
    {{#if isPost}}
    <section id="find-section">

        <!-- If there are any matching matches from the search, show each of them -->
        {{#each houses}}
        <div class="card">
            <h3>{{this.name}}</h3>
            <p>{{this.propertyDescription}}</p>
            <div class="cta-container"><a href="/house/details/{{this._id}}" class="det-link">Details</a></div>
            <div class="card_circle"><img src="{{this.homeImage}}"></div>

        </div>
        {{else}}
        <div class="no-data-listing">
            <p class="no-offer">No match was found for the submitted type...</p>
        </div>
        {{/each}}
        <!-- If there are no search matches, show: -->
        <!--<div class="no-data-listing">
                    <p class="no-offer">No match was found for the submitted type...</p>
                </div>-->
                
    </section>
    {{/if}}
</main>